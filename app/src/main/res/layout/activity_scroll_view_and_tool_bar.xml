<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scrollViewAndToolBar">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Shopping App"
        android:background="@color/cardview_dark_background"
        app:titleTextColor="@color/white"
        app:logo="@drawable/baseline_shopping_cart_24"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/random_img"
                />
            <ImageView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/random_img_1"
                />
            <ImageView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/random_img_2"
                />
            <ImageView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/random_img_3"
                />
            <ImageView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/random_img_4"
                />
            <ImageView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/random_img_5"
                />
            <ImageView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/random_img_6"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>